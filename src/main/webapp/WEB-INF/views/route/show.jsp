<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<html>
<head>
    <title>Routes</title>
</head>
<body>
<jsp:include page="/WEB-INF/fragments/header.jsp"/>

<h2>Routes</h2>

<form action="/routes/add" method="get">
    <button>New route</button>
</form>

<table>
    <thead>
    <tr>
        <th>ID</th>
        <th>Line</th>
        <th>Order No</th>
        <th>Busstop</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <c:forEach var="route" items="${routes}">
        <tr>
            <td><c:out value="${route.id}"/></td>
            <td><c:out value="${route.line.numberVariant}"/></td>
            <td><c:out value="${route.orderNoInt}"/></td>
            <td><c:out value="${route.busstop.name}"/></td>
            <td>
                <a href="/routes/details/<c:out value="${route.id}"/>">Details</a>
                <a href="/routes/edit/<c:out value="${route.id}"/>">Edit</a>
                <a href="/routes/del/<c:out value="${route.id}"/>">Delete</a>
            </td>
        </tr>
    </c:forEach>
    </tbody>
</table>

<jsp:include page="/WEB-INF/fragments/footer.jsp"/>
</body>
</html>
